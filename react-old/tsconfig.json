{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist/",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "target": "es2020",
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true
  }
}
